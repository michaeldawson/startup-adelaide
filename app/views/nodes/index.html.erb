<h1>Listing nodes</h1>

<table>
  <tr>
    <th>Category</th>
    <th>Name</th>
    <th>Contact</th>
    <th>Street</th>
    <th>City</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
    <td><%= node.category_id %></td>
    <td><%= node.name %></td>
    <td><%= node.contact %></td>
    <td><%= node.street %></td>
    <td><%= node.city %></td>
    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

